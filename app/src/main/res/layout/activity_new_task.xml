<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayTask.NewTaskActivity">

    <TextView
        android:id="@+id/const_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="@string/TaskName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@+id/const_task_name"
        tools:layout_editor_absoluteX="159dp" />

    <TextView
        android:id="@+id/const_task_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="@string/string_task_score"
        app:layout_constraintStart_toStartOf="@+id/const_task_name"
        app:layout_constraintTop_toTopOf="@+id/const_task_name" />

    <EditText
        android:id="@+id/edit_task_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/edit_task_name"
        app:layout_constraintTop_toTopOf="@+id/const_task_score" />




    <TextView
        android:id="@+id/const_task_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="@string/string_task_times"
        app:layout_constraintStart_toStartOf="@+id/const_task_score"
        app:layout_constraintTop_toTopOf="@+id/const_task_score" />

    <EditText
        android:id="@+id/edit_task_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/edit_task_score"
        app:layout_constraintTop_toTopOf="@+id/const_task_times" />

    <Button
        android:id="@+id/button_item_task_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="@string/string_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>